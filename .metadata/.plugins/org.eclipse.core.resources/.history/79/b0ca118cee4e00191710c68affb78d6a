package com.jawwy.pageobject;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import com.jawwy.util.Log;

public class RMS_HomePage {
	
	private static WebElement element = null;

	public static WebElement txtbox_SearchBy(WebDriver driver){

		element = driver.findElement(By.xpath("//input[@id='simInfoForm:searchInput']"));

		if(element!=null)
		{   
			Log.info("SearchBy Textbox is displayed.");
			System.out.println("SearchBy textbox is displayed.");

		}
		else
		{
			Log.warn("SearchBy Textbox is not displayed.");
			System.out.println("SearchBy textbox is not displayed.");

		}

		return element;

	}
    
	public static WebElement select_SearchBy(WebDriver driver){

		select = new Select(driver.findElement(By.xpath("//select[@data-number='new number']")));

		if(select!=null)
		{   
			Log.info("SIM number dropdown is displayed.");
			System.out.println("SIM number dropdown is displayed.");

		}
		else
		{
			Log.warn("SIM number dropdown is not displayed.");
			System.out.println("SIM number dropdown is not displayed.");

		}

		return select;

	}
}
